    def conversor(tipo_pesos, valor_dolar):
    pesos = input("Â¿CuÃ¡ntos pesos " + tipo_pesos + " tienes?: ")
    pesos = float(pesos)
    dolares = pesos / valor_dolar
    dolares = round(dolares, 2)
    dolares = str(dolares)
    print("Tienes $" + dolares + " dÃ³lares")


